{
  "name": "record-route-root",
  "version": "1.0.0",
  "private": true,
  "description": "RecordRoute 모노레포 - 음성/영상/PDF를 텍스트로 변환하고 회의록으로 요약하는 통합 워크플로우 시스템",
  "workspaces": [
    "electron",
    "frontend"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=electron",
    "start": "npm start --workspace=electron",
    "build": "npm run build --workspace=electron",
    "build:win": "npm run build:win --workspace=electron",
    "build:mac": "npm run build:mac --workspace=electron",
    "build:linux": "npm run build:linux --workspace=electron",
    "build:rust": "bash tools/scripts/build-rust.sh",
    "build:llama": "bash tools/scripts/build-llama.sh",
    "build:all": "npm run build:llama && npm run build:rust",
    "install-deps": "npm run install-deps --workspace=electron",
    "postinstall": "git submodule update --init --recursive"
  },
  "repository": {
    "type": "git",
    "url": "http://local_proxy@127.0.0.1:40219/git/john33fiao/RecordRoute"
  },
  "keywords": [
    "stt",
    "speech-to-text",
    "whisper",
    "llama-cpp",
    "summarization",
    "meeting-notes",
    "vector-search",
    "monorepo"
  ],
  "author": "",
  "license": "ISC"
}
